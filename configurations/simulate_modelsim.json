{
    "project":"simulate_modelsim",
 
    "flow_steps": {
        "1": "compile_clean",
        "2": "compile",
        "3" : "clean_vlib",
        "4": "vlib",
        "5": "test_case",
	    "6" : "simulation"
    },
    "flow" : {
        "compile_clean" : {
	        "executable": "make",
	        "arguments" : " TARGET=$simulation CPU=$cpu clean"	
	    },           
	    "compile" : {
	        "executable": "make",
	        "arguments" : " TARGET=$simulation CPU=$cpu"	
	    },
        "clean_vlib":{
	        "executable": "rm -rf",
	        "arguments" : " vlib"	            
        },
	    "vlib" : {
	        "executable": "vlib",
	        "arguments" : " work"	
	    },        
        
	    "test_case" : {
	        "executable": "vlog",
	        "arguments" : " $simulation.v +incdir+../testbench"	
	    },        
	    "simulation" : {
	        "executable": "vsim",
	        "arguments" : " -c -do rtl_modelsim_$cpu.f -l $simulation.$cpu.modelsim.log"	
	    }
    },
    "remove_files" : "work transcript test_case.v vsim.wlf a.out *.o *.d *.elf *.lst *.mem *.srec *.vh.mem *.tmp"
}
